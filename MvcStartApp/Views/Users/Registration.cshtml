@{
    ViewData["Title"] = "New User";
}

<div class="text-center mb-4">
    <h1 class="display-4">Регистрация пользователя</h1>
</div>
<form method="post">
    <div class="row mb-3">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <label for="emailInput">Электронная почта:</label>
            <input type="email" class="form-control" id="emailInput" placeholder="name@example.com" name="Email">
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row mb-5">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <label for="passwordInput">Пароль:</label>
            <input type="password" class="form-control" id="passwordInput" placeholder="password" name="Password">
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row mb-1">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <button class="btn btn-primary btn-lg w-100" type="submit">Сохранить</button>
        </div>
        <div class="col-md-4"></div>
    </div>
</form>